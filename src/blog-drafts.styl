:local(.blog-drafts-entry) {
  margin: 2em 0;
  // padding: 1em 1.5em 1em;
  // background: #FFFA85;

  &:after {
    display: block;
    content: '';
    width: 100%;
    margin-top: 2em;
    height: 0.5em;
    background: rgba(#B23A4B);
  }

  h1, h3 {
    margin-bottom: 0;
  }

  h1 {
    color: rgba(#B23A4B);
  }

  a:nth-child(1) & {
    margin: 0;
  }
}

:local(.blog-drafts-entry-date) {
  color: rgba(#B23A4B);
}